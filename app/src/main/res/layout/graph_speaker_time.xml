<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fabListener"
            type="ca.rmen.android.scrumchatter.meeting.graph.MeetingsGraphActivity.FabListener" />
    </data>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_speaker_time_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        card_view:cardCornerRadius="4dp"
        tools:showIn="@layout/meetings_graph_activity">

        <RelativeLayout
            android:id="@+id/speaker_time_graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/tv_title_speaker_time_graph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:id="@+id/legend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_title_speaker_time_graph"
                android:orientation="vertical" />

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/chart_speaker_time"
                android:layout_width="wrap_content"
                android:layout_height="480dp"
                android:layout_below="@id/tv_title_speaker_time_graph"
                android:layout_toLeftOf="@id/legend"
                android:layout_toStartOf="@id/legend"
                android:padding="8dp" />

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_share_speaker_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:onClick="@{fabListener.onShareSpeakerTime}"
            app:srcCompat="@drawable/ic_action_share" />
    </android.support.v7.widget.CardView>
</layout>
